# Copy to .env and fill your values

# --- Tinkoff Invest ---
TINKOFF_TOKEN=
TINKOFF_ACCOUNT_ID=
MODE=sandbox  # valid modes: sandbox | live | virtual
TINKOFF_SANDBOX=true  # whether to use sandbox endpoints
# Optional sandbox token and account id for sandbox mode. If unset, the default token and account will be reused.
TINKOFF_SANDBOX_TOKEN=
TINKOFF_ACCOUNT_ID_SANDBOX=

# --- Telegram ---
TELEGRAM_TOKEN=
TELEGRAM_CHAT_ID=
ALLOWED_USERS=  # comma-separated numeric user ids

# --- Web auth (optional) ---
MOEX_API_USER=
MOEX_API_PASS=

# Admin token for privileged endpoints (e.g. POST /reload).  Required only if you enable admin features.
MOEX_ADMIN_TOKEN=
